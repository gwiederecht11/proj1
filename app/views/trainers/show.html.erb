<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% @trainer.pokemons.each do |pokemon| %>
  <% if pokemon.ndex %>
    <%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %>
    <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %>
  <% end %>
  <p>Name: <%= pokemon.name %></p>
  <p>Level: <%= pokemon.level %></p>
  <p>Health: <%= pokemon.health %></p>
<% end %>


<% if @trainer.id == current_trainer.id then %>
<%= link_to "Create New Pokemon", new_pokemon_path %>
<% end %>
